<form method="POST" action="/udate-user/<%= data.user.id %>" class="p-4 border rounded shadow-sm bg-white">
    <h4 class="mb-4 text-primary">Cập nhật người dùng</h4>
    <!-- Username -->
    <div class="mb-3">
      <label for="username" class="form-label fw-bold">Tên tài khoản</label>
      <div class="input-group">
        <span class="input-group-text">
          <i class="bi bi-person"></i>
        </span>
        <input
          type="text"
          class="form-control"
          value="<%= data.user.username %>"
          disabled
        />
      </div>
    </div>
    <!-- Password -->
    <div class="mb-3">
      <label for="password" class="form-label fw-bold">Mật khẩu</label>
      <div class="input-group">
        <span class="input-group-text">
          <i class="bi bi-lock"></i>
        </span>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          value="<%= data.user.password %>"
          placeholder="Nhập mật khẩu"
          required
        />
      </div>
    </div>
    <!-- Full Name -->
    <div class="mb-3">
      <label for="fullname" class="form-label fw-bold">Họ và tên</label>
      <div class="input-group">
        <span class="input-group-text">
          <i class="bi bi-card-text"></i>
        </span>
        <input
          type="text"
          class="form-control"
          id="fullname"
          name="fullname"
          value="<%= data.user.fullname %>"
          placeholder="Nhập họ và tên"
          required
        />
      </div>
    </div>
    <!-- Address -->
    <div class="mb-3">
      <label for="address" class="form-label fw-bold">Địa chỉ</label>
      <div class="input-group">
        <span class="input-group-text">
          <i class="bi bi-house"></i>
        </span>
        <input
          type="text"
          class="form-control"
          id="address"
          name="address"
          value="<%= data.user.address %>"
          placeholder="Nhập địa chỉ"
          required
        />
      </div>
    </div>
    <!-- Sex (Checkboxes) -->
    <div class="mb-3">
      <label class="form-label fw-bold">Giới tính</label>
      
      <!-- Male checkbox -->
      <div class="form-check">
        <input class="form-check-input" type="radio" id="sexMale" name="sex" value="1" 
          <%= data.user.sex === 1 ? 'checked' : '' %> > <!-- Check if user.sex is 1 (Male) -->
        <label class="form-check-label" for="sexMale">
          Nam
        </label>
      </div>
    
      <!-- Female checkbox -->
      <div class="form-check">
        <input class="form-check-input" type="radio" id="sexFemale" name="sex" value="0" 
          <%= data.user.sex === 0 ? 'checked' : '' %> > <!-- Check if user.sex is 0 (Female) -->
        <label class="form-check-label" for="sexFemale">
          Nữ
        </label>
      </div>
    </div>
    <!-- Email -->
    <div class="mb-3">
      <label for="email" class="form-label fw-bold">Email</label>
      <div class="input-group">
        <span class="input-group-text">
          <i class="bi bi-envelope"></i>
        </span>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          value="<%= data.user.email %>"
          placeholder="Nhập địa chỉ email"
          required
        />
      </div>
    </div>
    <!-- Submit Button -->
    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
      <button class="btn btn-primary btn-lg" type="submit">
        <i class="bi bi-plus-circle"></i> Cập nhật
      </button>
    </div>
  </form>