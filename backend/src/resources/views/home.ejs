<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h3 class="text-primary">Danh sách người dùng</h3>
    <a href="/create-user" class="btn btn-primary btn-lg" tabindex="-1" role="button">
      <i class="bi bi-person-plus"></i> Thêm người dùng
    </a>
  </div>

  <div class="table-responsive">
    <table class="table table-hover table-striped align-middle">
      <thead class="table-primary">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Tên tài khoản</th>
          <th scope="col">Họ và tên</th>
          <th scope="col">Địa chỉ</th>
          <th scope="col">Giới tính</th> <!-- New Gender Column -->
          <th scope="col" class="text-center">Thiết lập</th>
        </tr>
      </thead>
      <tbody>
        <% for(let i = 0; i < data.rows.length; i++) { %>
          <tr>
            <td><%= data.rows[i].id %></td>
            <td><%= data.rows[i].username %></td>
            <td><%= data.rows[i].fullname %></td>
            <td><%= data.rows[i].address %></td>
            <td>
              <% if (data.rows[i].sex === 1) { %> <!-- Check the sex value -->
                Nam
              <% } else { %>
                Nữ
              <% } %>
            </td>
            <td class="text-center">
              <button id="showUser" class="btn btn-outline-info btn-sm me-2">
                <i class="bi bi-eye"></i>
              </button>
              <a href="/udate-user/<%= data.rows[i].id %>" class="btn btn-outline-warning btn-sm me-2">
                <i class="bi bi-pencil-square"></i>
              </a>
              <button data-userid='<%= data.rows[i].id %>' data-bs-toggle='modal' data-bs-target='#delete-user-model' class="btn btn-outline-danger btn-sm">
                <i class="bi bi-trash"></i>
              </button>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<div id='delete-user-model' class='modal' tabindex='-1' role='dialog'>
  <div class='modal-dialog modal-dialog-centered' role='document'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title'>Xóa user này</h5>
        <button type='button' class='btn-close' data-bs-dismiss='modal' aria-label='Close'></button>
      </div>
      <div class='modal-body'>
        <p>Hành động này không thể khôi phục!!!!!!!!!!!!</p>
      </div>
      <div class='modal-footer'>
        <button id='btn-delete' type='button' class='btn btn-primary'>Chấp Nhận</button>
        <button type='button' class='btn btn-secondary' data-bs-dismiss='modal'>Hủy</button>
      </div>
    </div>
  </div>
</div>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    var btndeleteUser = document.getElementById('btn-delete');
    var userId;

    var deleteModal = document.getElementById('delete-user-model');
    deleteModal.addEventListener('show.bs.modal', function (event) {
      var button = event.relatedTarget;
      userId = button.getAttribute('data-userid');
    });

    btndeleteUser.onclick = function () {
      var deleteFormUser = document.createElement('form');
      deleteFormUser.method = "POST";
      deleteFormUser.action = `/delete-user/${userId}`;
      document.body.appendChild(deleteFormUser);
      deleteFormUser.submit();
    }
  });
</script>
